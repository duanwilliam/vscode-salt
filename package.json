{
  "name": "errorviz",
  "publisher": "weirane",
  "displayName": "REVIS",
  "icon": "assets/errorviz-256x256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/weirane/vscode-revis"
  },
  "description": "Visualize lifetime-related Rust compiler errors",
  "version": "0.1.3",
  "license": "MIT",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "seenform" : false,
    "commands": [
      {
        "command": "revis.toggleVisualization",
        "title": "revis: Toggle Visualization"
      },
      {
        "command": "revis.clearAllVisualizations",
        "title": "revis: Clear All Visualizations"
      },
      {
        "command": "revis.researchParticipation",
        "title": "revis: View Consent to Participate in Research"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && editorLangId == 'rust'",
        "command": "revis.toggleVisualization"
      },
      {
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == 'rust'",
        "command": "revis.researchParticipation"
      }
    ],
    "configuration": {
      "title": "revis",
      "properties": {
        "revis.researchRecruitment": {
          "type": "boolean",
          "default": "true",
          "description": "Display an infomessage about research participation"
        },
        "revis.errorLogging": {
          "type": "boolean",
          "default": "false",
          "description": "Enable the recording and sending of error logs for academic research (must agree to consent form before enabled)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jsdom": "^21.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.18.38",
    "@types/sharp": "^0.31.1",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.12",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "@vscode/extension-telemetry": "^0.8.2",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "jsdom": "^21.1.0",
    "svgdom": "^0.1.13",
    "vscode-languageclient": "^8.1.0",
    "vscode-uri": "^3.0.7"
  }
}
