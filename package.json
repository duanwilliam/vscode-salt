{
  "name": "errorviz",
  "publisher": "weirane",
  "displayName": "errorviz",
  "repository": {
    "type": "git",
    "url": "https://github.com/weirane/vscode-errorviz"
  },
  "description": "Visualize lifetime-related Rust compiler errors",
  "version": "0.0.2",
  "license": "MIT",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "errorviz.toggleVisualization",
        "title": "errorviz: Toggle Visualization"
      },
      {
        "command": "errorviz.clearAllVisualizations",
        "title": "errorviz: Clear All Visualizations"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "command": "errorviz.toggleVisualization"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jsdom": "^21.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/sharp": "^0.31.1",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.12",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "jsdom": "^21.1.0",
    "svgdom": "^0.1.13"
  }
}
